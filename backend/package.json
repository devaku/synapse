{
	"name": "backend",
	"version": "1.0.0",
	"main": "index.ts",
	"scripts": {
		"dev": "nodemon src/index.ts",
		"scratch": "nodemon scratch.ts",
		"dist": "nodemon dist/index.js",
		"compose:up": "docker compose -p synapse_backend up --build",
		"compose:down": "docker compose -p synapse_backend down",
		"compose:stop": "docker compose -p synapse_backend stop",
		"db:seed": "npx prisma migrate reset && ts-node prisma/index_seed.ts",
		"db:reset": "npx prisma migrate reset",
		"format": "npx prettier . --write --config ../.prettierrc.json",
		"build": "npm run clean && npm run compile && npm run copy",
		"clean": "rimraf dist",
		"compile": "tsc",
		"copy": "cpx \"src/**/*.{json,html,css,ico,png,jpg}\" dist",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"author": "",
	"license": "ISC",
	"description": "",
	"dependencies": {
		"@prisma/client": "^6.16.1",
		"axios": "^1.12.2",
		"connect-pg-simple": "^10.0.0",
		"cors": "^2.8.5",
		"dotenv": "^17.2.2",
		"express": "^5.1.0",
		"express-session": "^1.18.2",
		"jsonwebtoken": "^9.0.2",
		"keycloak-connect": "^26.1.1",
		"serve-favicon": "^2.5.1",
		"socket.io": "^4.8.1"
	},
	"devDependencies": {
		"@types/connect-pg-simple": "^7.0.3",
		"@types/cookie-parser": "^1.4.9",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/express-session": "^1.18.2",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/serve-favicon": "^2.5.7",
		"cpx": "^1.5.0",
		"http-status-codes": "^2.3.0",
		"nodemon": "^3.1.10",
		"prisma": "^6.16.1",
		"rimraf": "^6.0.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.2"
	}
}
