{
	"name": "backend",
	"version": "1.0.0",
	"main": "index.ts",
	"scripts": {
		"dev": "nodemon src/index.ts",
		"scratch": "nodemon scratch.ts",
		"dist": "node dist/index.js",
		"compose:up": "docker compose -f ../docker-compose.yaml -p synapse_backend up --build",
		"compose:down": "docker compose -p synapse_backend down",
		"compose:stop": "docker compose -p synapse_backend stop",
		"db:seed": "npm run clean:uploads && npm run seed:uploads && npx prisma migrate reset --force && ts-node prisma/index_seed.js",
		"db:reset": "npx prisma migrate reset --force",
		"db:generate": "npx prisma generate",
		"clean:uploads": "rimraf public/uploads",
		"seed:uploads": "cpx \"prisma/images/*\" src/public/uploads",
		"build-dist": "npm run db:seed && npm run db:generate && npm run clean && npm run compile && npm run copy",
		"build": "npm run db:generate && npm run clean && npm run compile && npm run copy",
		"clean": "rimraf dist",
		"compile": "tsc",
		"copy": "cpx \"src/**/!(uploads)/*\" dist",
		"format": "npx prettier . --write --config ../.prettierrc.json",
		"test": "echo \"Error: no test specified\" && exit 1",
		"mcp": "tsx src/mcp/index.ts"
	},
	"author": "",
	"license": "ISC",
	"description": "",
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.20.0",
		"@prisma/client": "^6.16.1",
		"axios": "^1.12.2",
		"connect-pg-simple": "^10.0.0",
		"cors": "^2.8.5",
		"dotenv": "^17.2.2",
		"express": "^5.1.0",
		"express-session": "^1.18.2",
		"jsonwebtoken": "^9.0.2",
		"keycloak-connect": "^26.1.1",
		"multer": "^2.0.2",
		"node-fetch": "^3.3.2",
		"serve-favicon": "^2.5.1",
		"socket.io": "^4.8.1",
		"uuid": "^13.0.0",
		"zod": "^3.25.76",
		"zod-to-json-schema": "^3.24.6"
	},
	"devDependencies": {
		"@types/connect-pg-simple": "^7.0.3",
		"@types/cookie-parser": "^1.4.9",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/express-session": "^1.18.2",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/multer": "^2.0.0",
		"@types/node": "^24.7.2",
		"@types/node": "^24.7.2",
		"@types/serve-favicon": "^2.5.7",
		"@types/socket.io": "^3.0.2",
		"@types/socket.io-client": "^3.0.0",
		"cpx": "^1.5.0",
		"http-status-codes": "^2.3.0",
		"nodemon": "^3.1.10",
		"prisma": "^6.16.1",
		"rimraf": "^6.0.1",
		"ts-node": "^10.9.2",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3"
	}
}
